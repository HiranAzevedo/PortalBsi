  <% if @empresa.errors.any? %>
  <div id="error_explanation">
    Há erros no formulário, por favor verifique.
  </div>
<% end %>
<article class="col-sm-9 col-xs-12">
<%= form_for @empresa do |f| %>
    
    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
      <%= error_tag @empresa, :name %>
    </p>
    <p>
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
      <%= error_tag @empresa, :email %>
    </p>
    <p>
      <%= f.label :phone %><br/>
      <%= f.text_field :phone %>
      <%= error_tag @empresa, :phone %>
    </p>
    <p>
      <%= f.label :file %><br/>
      <span>(Documento escaneado que comprove seu vículo empregatício com a empresa ofertante) </span> <br/>
      <%= f.file_field :file %><br/>
    </p>
    <p>
      <%= f.label :message %><br/>
      <%= f.text_area :message, style: "height:215px; max-height:215px; width:717px; max-width:717px" %><br/>
    </p>
    <p class = "hidden">
      <%= f.text_field :nickname %>
    </p>
    <p>
      <%=f.submit :class=> "btn btn-primary"%>
    </p>
<% end %>
</article>


  
