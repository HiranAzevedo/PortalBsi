  <% if @empresa.errors.any? %>
  <div id="error_explanation">
    Há erros no formulário, por favor verifique.
  </div>
<% end %>
<article class="col-sm-9 col-xs-12">
<%= form_for @empresa do |f| %>
    
    <p>
      <%= f.label :nome %><br/>
      <%= f.text_field :nome %>
      <%= error_tag @empresa, :nome %>
    </p>
    <p>
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
      <%= error_tag @empresa, :email %>
    </p>
    <p>
      <%= f.label :arquivo %><br/>
      <%= f.file_field :arquivo %><br/>
    </p>
    <p>
      <%= f.label :mensage %><br/>
      <%= f.text_area :mensage, style: "height:215px; max-height:215px; width:717px; max-width:717px" %><br/>
    </p>
    <p class = "hidden">
      <%= f.text_field :nickname %>
    </p>
    <p>
      <%=f.submit :class=> "btn btn-primary"%>
    </p>
<% end %>
</article>


  
