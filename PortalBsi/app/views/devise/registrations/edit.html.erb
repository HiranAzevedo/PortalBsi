  <h1>Editar Perfil</h1>
  <hr>
  <div class="row">

    <!-- edit form column -->

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
          <!-- left column -->
          <div class="col-md-3">
            <div class="text-center">
              <%= image_tag(current_user.avatar.url(:thumb), class: "avatar img-circle") %>

              <%= f.file_field :avatar %>
            </div>
          </div>


        <div class="col-md-9 personal-info">
          <%= devise_error_messages! %>
          <h3>Informações pessoais</h3>

        <div class="form-group">
          <%= f.label :nome, class: "col-lg-3 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :nome, class: "form-control", disabled: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :matricula, class: "col-lg-3 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :matricula , class: "form-control", disabled: true %>
          </div>
        </div>

          <div class="form-group">
            <%= f.label "Nome de Tratamento", class: "col-lg-3 control-label" %>
            <div class="col-lg-8">
              <%= f.text_field :apelido , class: "form-control", value: retornaApelido(resource.nome), autofocus: true %>
            </div>
          </div>

        <div class="form-group">
          <%= f.label :email, class: "col-lg-3 control-label" %>
          <div class="col-lg-8">
            <%= f.email_field :email , class: "form-control" %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.label "Nova Senha", class: "col-lg-3 control-label" %><i>(Preencha caso queira alterar sua senha)</i><br />
          <div class="col-lg-8">
            <%= f.password_field :password , class: "form-control", autocomplete: "off" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Cofirme a Nova Senha Senha", class: "col-lg-3 control-label" %><i>(Preencha caso queira alterar sua senha)</i><br />
          <div class="col-lg-8">
            <%= f.password_field :password_confirmation , class: "form-control", autocomplete: "off" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Senha Atual", class: "col-lg-3 control-label" %> <i>(Necessário para confirmar as alterações)</i><br />
          <div class="col-lg-8">
            <%= f.password_field :current_password , class: "form-control", autocomplete: "off" %>
          </div>
        </div>

        <div><%= f.submit "Atualizar" %></div>
    <% end %>
    <%= link_to "Back", :back %>
    </div>

  </div>
<hr>

