<%= form_for @oportunidade do |f| %>
    
    <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :company_name %><br/>
      <%= f.text_field :company_name %>
    </p>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description %><br/>
    </p>
    <p>
      <%= f.label :expiration_date %><br/>
      <%= f.date_select :expiration_date %><br/>
    </p>
    <p>
      <%= f.label :has_partnership %><br/>
      <%= f.check_box :has_partnership %><br/>
    </p>
    <p>
      <%=f.submit %>
    </p>
<% end %>