<% if @oportunidade.errors.any? %>
  <div id="error_explanation">
    Há erros no formulário, por favor verifique.
  </div>
<% end %>
<article class="col-sm-9 col-xs-12">
<%= form_for @oportunidade do |f| %>
    
    <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
      <%= error_tag @oportunidade, :title %>
    </p>
    <p>
      <%= f.label :company_name %><br/>
      <%= f.text_field :company_name %>
      <%= error_tag @oportunidade, :company_name %>
    </p>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description, style: "height:215px; max-height:215px; width:717px; max-width:717px"%><br/>
      <%= error_tag @oportunidade ,:description %>
    </p>
    <p>
      <%= f.label :expiration_date %><br/>
      <%= f.date_select :expiration_date %><br/>
    </p>
    <p>
      <%= f.label :has_partnership %><br/>
      <%= f.radio_button :has_partnership, true %> 
      <%= f.label :has_partnership, "Yes", :value => "true" %> &nbsp;
      <%= f.radio_button :has_partnership, false %> 
      <%= f.label :has_partnership, "No", :value => "false" %>
    </p>
    <p>
      <%= f.label :tag_list, "Tags (Separada por vírgulas)" %><br/>
      <%= f.text_field :tag_list %>
    </p>
    <p>
      <%= f.label :picture %>
      <%= f.file_field :picture %>
      <%= error_tag @oportunidade, :picture %>
    </p>
    <p>
      <%=f.submit :class=> "btn btn-primary" %>
    </p>
<% end %>
</article>
