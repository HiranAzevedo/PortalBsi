<div class="container">
  <div class="row-offcanvas">
    <%= render partial: "menu_oportunidades", locals: {tipo: 'vazio'} %>
	<p><%= notice %></p>
	<article class="col-sm-9 col-xs-12">
	   <h2>Oportunidade: <%= @oportunidade.title %></h2>
	     <p>Ofertante: <%= @oportunidade.company_name %></p>
       <p>Tipo da Oportunidade: <%= @oportunidade.type.humanize %></p>
       <p> Valor da Bolsa: <%= number_to_currency(@oportunidade.currency, unit: "R$", spearator: ",", delimiter: "" )%></p>
       <p>Descrição:</p>
       <p><%= @oportunidade.description %></p>

       <% if @oportunidade.has_partnership? and @oportunidade.type == "estagio"%>
   		   <p>Convênio: Sim</p>
       <% elsif !@oportunidade.has_partnership? and @oportunidade.type == "estagio"%>
         <p>Convênio: Não</p>
        <% else %>
         <p>Convênio: Não se aplica</p> 
       <% end %>

       <p>Válido até o dia: <%= @oportunidade.expiration_date.strftime("%d/%m/%Y") %></p>
       <p><%= image_tag @oportunidade.picture_url.to_s if @oportunidade.picture_url.present? %></p>
	</article>
  </div>
</div>


