<div id="barraLogin">
  <ul>
    <% if !user_signed_in? %>
        <%= form_for(:user, :url => session_path(:user)) do |f| %>
            <label style="padding-right: 7px;padding-left: 500px;">Email:</label><%= f.text_field :email%>
            <label>Senha:</label><%= f.password_field :password %>
            <%= f.check_box :remember_me %>
            <%= f.label "Mantenha-me conectado" %>
            <%= f.submit 'Login', style: "padding: 3px 10px" %>
        <% end %>
    <% else %>
        <div id="logado" style="margin-left: 550px;padding-top: 18px;font-size: 100%;">
          Olá, <%= current_user.nome %>!
          <%= link_to "Editar Perfil", edit_user_registration_path %>
          <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
        </div>
    <% end %>
  </ul>
</div>
