<script type="text/javascript">

window.onload = init;
var Game = null;

function init() {
    Game = new GameManager();
    Game.setup(document.getElementById('gameCanvas'));
	Game.setupReport(document.getElementById('gameReport') );

    document.onkeydown = function(event){Game.player.keyDown(event);}
    document.onkeyup = function(event){Game.player.keyUp(event);}
	window.focus();
	document.getElementById('gameCanvas').focus();
}

function Animate() {
	if (Game.playing) {
		Game.draw();
		setTimeout(function(){Animate()}, 30); //a cada intervalo de tempo, será executada a função gameManager.draw(), que irá renderizar a cena atual. As sucessivas chamadas provocam a animação do jogo.
	}
}


</script>

